<h1>Welcome to Sprint</h1>


<h2>
<%= form_tag root_path, :method => 'get', id: 'search-form' do %>
    <p>
      I want to invest
      <%= text_field_tag :search, params[:principal], placeholder: 'Principal' %>
      for this
      <%= text_field_tag :search, params[:period], placeholder: 'Period' %>
      days
      <%= submit_tag "Filter", :name => nil %>
    </p>
<% end %>
</h2>

<h2>Fixed Deposit Investments</h2>
<table>
  <thead>
    <tr>
      <th>Institution</th>
      <th>Investment</th>
      <th>Description</th>
      <th>Interest Rate</th>
    </tr>
  </thead>
  <tbody>
    <% @fixed_deposit_investments.each do |fixed_deposit_investment| %>
    <tr>
      <td><%= fixed_deposit_investment.institution.name %></td>
      <td><%= fixed_deposit_investment.name %></td>
      <td><span class="description"><%= fixed_deposit_investment.description %></span></td>
      <td><%= fixed_deposit_investment.interest_rate / 10000.0 %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>Mutual Funds</h2>
<table>
  <thead>
  <tr>
    <th>Institution</th>
    <th>Investment</th>
    <th>Description</th>
    <th>Unit Price</th>
    <th>Yield To Date</th>
  </tr>
  </thead>
  <tbody>
  <% @mutual_funds.each do |mutual_fund| %>
      <tr>
        <td><%= mutual_fund.institution.name %></td>
        <td><%= mutual_fund.name %></td>
        <td><span class="description"><%= mutual_fund.description %></span></td>
        <td><%= mutual_fund.unit_price %></td>
        <td><%= mutual_fund.yield_to_date / 10000.0 %></td>
      </tr>
  <% end %>
  </tbody>
</table>
