    </a>
    <div class="collapse navbar-collapse" id="navbarNav1">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/fixed_deposit_investments">Fixed Deposit Investments</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/mutual_funds">Mutual Funds</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#about">About</a>
        </li>
      </ul>
      <form action="search" class="form-inline waves-effect waves-light">
        <input class="form-control" type="text" name="query" placeholder="Search">
      </form>
    </div>
  </div>
</nav>
<!--/.Navbar-->

<%= yield %>

