<% @fixed_deposit_investments.each do |fixed_deposit_investment| %>

      <div class="card investment">
        <div class="row">
          <div class="col-md-2">
            <div class="card-block">
              <svg width="150px" height="150px" fill="#00BBD6" viewBox="0 0 1 1">
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#piechart" mask="url(#piemask)"></use>
                <text class="final_balance" x="0.5" y="0.5" font-family="Roboto" font-size="0.1" fill="#888" text-anchor="middle" dy="0.1">
                </text>
              </svg>
            </div>
          </div>
          <div class="col-md-10">
            <div class="card-block">
              <div class="d-flex justify-content-between">
                <h4 class="card-title"><%= fixed_deposit_investment.name %></h4>
                <small><%= fixed_deposit_investment.institution.name %></small>
              </div>
              <p class="card-text">
              <p class="d-flex justify-content-between">
                <span>Final balance</span>
                <strong class="final_balance"></strong>
              </p>
              <p class="d-flex justify-content-between">
                <span>Total interest</span>
                <span class="total_interest"></span>
              </p>
              <p class="d-flex justify-content-between">
                <span>Interest rate</span><%= fixed_deposit_investment.interest_rate %> &nbsp;%
              </p>
              <input type="hidden" name="annual_interest_rate" value="<%= fixed_deposit_investment.interest_rate %>">
              </p>
            </div>
          </div>
        </div>
      </div>

<% end %>


<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" style="position: fixed; left: -1000px; height: -1000px;">
  <defs>
    <mask id="piemask" maskContentUnits="objectBoundingBox">
      <circle cx=0.5 cy=0.5 r=0.49 fill="white" />
      <circle cx=0.5 cy=0.5 r=0.40 fill="black" />
    </mask>
    <g id="piechart">
      <circle cx=0.5 cy=0.5 r=0.5 />
      <path d="M 0.5 0.5 0.5 0 A 0.5 0.5 0 0 1 0.95 0.28 z" stroke="none" fill="rgba(255, 255, 255, 0.75)" />
    </g>
  </defs>
</svg>