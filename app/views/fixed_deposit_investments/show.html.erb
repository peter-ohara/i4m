<div class="container content">
  <div class="row">
    <% if flash[:notice] %>
        <div class="col-md-12">
          <div class="notice text-success text-center"><%= flash[:notice] %></div>
          <br>
        </div>
    <% end %>
    <div class="col-md-12">
      <%= render 'layouts/calculator_form' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-7">
      <!--Card-->
      <div class="card wow fadeIn">

        <!--Card content-->
        <div class="card-block height-of-cards">
          <!--Title-->
          <h4 class="card-title">
            <%= @fixed_deposit_investment.name %>
          </h4>
          <hr>
          <!--Text-->
          <p class="card-text description">
            <%= @fixed_deposit_investment.description %>
          </p>
        </div>
        <!--/.Card content-->

      </div>
      <!--/.Card-->
    </div>


    <div class="col-md-5">
      <!--Card-->
      <div class="card wow fadeIn investment" data-wow-delay="0.2s">

        <canvas id="myChart" class="demo-graph"></canvas>

        <!--Card content-->
        <div class="card-block">
          <!--Title-->
          <h4 class="card-title text-center">Returns</h4>
          <div>
            <p class="d-flex justify-content-between">
              <span>Final balance</span>
              <strong class="final_balance"></strong>
            </p>
            <p class="d-flex justify-content-between">
              <span>Total interest</span>
              <span class="total_interest"></span>
            </p>
            <p class="d-flex justify-content-between">
              <span>Interest rate</span>
              &nbsp; <%= @fixed_deposit_investment.interest_rate %> &nbsp;%
            </p>
            <input type="hidden" name="annual_interest_rate" value="<%= @fixed_deposit_investment.interest_rate %>">
          </div>
        </div>
        <!--/.Card content-->

      </div>
      <!--/.Card-->
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">
      <!--Card-->
      <div class="card wow fadeIn">

        <!--Card content-->
        <div class="card-block height-of-cards1">
          <!--Title-->
          <h4 class="card-title">Details</h4>
          <hr>
          <!--Text-->
          <p class="d-flex justify-content-between">
            <strong>Interest rate:</strong>
            <%= @fixed_deposit_investment.interest_rate %> %
          </p>

          <p class="d-flex justify-content-between">
            <strong>Tenure:</strong>
            <%= @fixed_deposit_investment.period %>
          </p>
        </div>
        <!--/.Card content-->

      </div>
      <!--/.Card-->
    </div>

    <div class="col-md-4">
      <!--Card-->
      <div class="card wow fadeIn" data-wow-delay="0.2s">

        <!--Card content-->
        <div class="card-block height-of-cards1">
          <!--Title-->
          <h4 class="card-title">Limitations & Fees</h4>
          <hr>
          <p class="d-flex justify-content-between">
            <strong>Min. time before withdrawal:</strong>
            <%= @fixed_deposit_investment.period %>
          </p>

          <p class="d-flex justify-content-between">
            <strong>Minimum principal:</strong>
            GHS <%= @fixed_deposit_investment.minimum_principal %>
          </p>
        </div>
        <!--/.Card content-->

      </div>
      <!--/.Card-->
    </div>

    <div class="col-md-4">
      <!--Card-->
      <div class="card wow fadeIn" data-wow-delay="0.2s">

        <!--Card content-->
        <div class="card-block height-of-cards1" align="center">
          <!--Title-->
          <h4 class="card-title">Risk Rating</h4>
          <hr>
          <canvas class="risk-meter" id="foo"
                  data-risk-rating="<%= @fixed_deposit_investment.risk_rating %>"></canvas>
          <p class="text-center">
            <strong><%= @fixed_deposit_investment.risk_label %></strong>
          </p>
        </div>
        <!--/.Card content-->

      </div>
      <!--/.Card-->
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 block-of-contents">
      <a href="/fixed_deposit_investments/<%= @fixed_deposit_investment.id %>/purchase" class="btn btn-info">
        Purchase
      </a>
    </div>
  </div>
</div>