<div class="section portfolio-max-width">
  <div class="section-header"><%= @fixed_deposit_investment.name %></div>
</div>

<div class="mdl-grid  portfolio-max-width">
  <div class="mdl-card mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--8-col">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">
        Description
      </h2>
    </div>
    <div class="mdl-card__supporting-text description">
      <%= @fixed_deposit_investment.description %>
    </div>
  </div>
  <div class="mdl-card mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--4-col">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">
        Details
      </h2>
    </div>
    <div class="mdl-card__supporting-text">

      <p>
        <strong>Insitution:</strong>
        <%= @fixed_deposit_investment.institution.name %>
      </p>

      <p>
        <strong>Interest Rate:</strong>
        <%= @fixed_deposit_investment.interest_rate / 10000.0 %>%
      </p>

      <p>
        <strong>Period in days:</strong>
        <%= @fixed_deposit_investment.period_in_days %>
      </p>

      <p>
        <strong>Minimum principal:</strong>
        GHS <%= @fixed_deposit_investment.minimum_principal %>
      </p>

      <p>
        <strong>Risk rating:</strong>
        <%= @fixed_deposit_investment.risk_rating %>
      </p>
    </div>
  </div>

</div>

<div class="mdl-grid  portfolio-max-width">
  <div class="mdl-card mdl-shadow--2dp mdl-color--white mdl-cell mdl-cell--12-col">
    <div class="mdl-card__title">
      <h2 class="mdl-card__title-text">
        Calculate Returns
      </h2>
    </div>
    <div class="mdl-card__supporting-text mdl-grid">
      <div class="mdl-cell mdl-cell--3-col">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= text_field_tag :principal, params[:principal], class: "mdl-textfield__input", pattern: "-?[0-9]*(\\.[0-9]+)?" %>
          <label class="mdl-textfield__label" for="principal">Amount to purchase...</label>
          <span class="mdl-textfield__error">Input is not a number!</span>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= text_field_tag :principal, params[:principal], class: "mdl-textfield__input", pattern: "-?[0-9]*(\\.[0-9]+)?" %>
          <label class="mdl-textfield__label" for="principal">Monthly Deposit...</label>
          <span class="mdl-textfield__error">Input is not a number!</span>
        </div>

        <p>
          Interest Rate: 8%
        </p>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= text_field_tag :principal, params[:principal], class: "mdl-textfield__input", pattern: "-?[0-9]*(\\.[0-9]+)?" %>
          <label class="mdl-textfield__label" for="principal">Duration...</label>
          <span class="mdl-textfield__error">Input is not a number!</span>
        </div>
      </div>

      <div class="mdl-cell mdl-cell--3-col">
        <p>Final Balance</p>
        <p>GHS 234,345</p>

        <p>Total Deposits</p>
        <p>GHS 234,345</p>

        <p>Total Interest</p>
        <p>GHS 234,345</p>
      </div>

      <div class="mdl-cell mdl-cell--6-col demo-graphs">
        <svg fill="currentColor" viewBox="0 0 500 250" class="demo-graph">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#chart"></use>
        </svg>
      </div>
    </div>
  </div>
</div>

<%= render partial: "layouts/purchase_form", locals: {path: 'fixed_deposit_investments', investment: @fixed_deposit_investment} %>

